<mujoco model="blocks table scene">
  <include file="tidybot.xml"/>

  <statistic center="0.25 0 0.6" extent="1.0" meansize="0.05"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5"/>
    <texture type="2d" name="wood" builtin="flat" rgb1="0.6 0.4 0.2" width="256" height="256"/>
    <material name="table_material" texture="wood" rgba="0.8 0.6 0.4 1"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
    
    <!-- Table -->
    <body name="table" pos="0.6 0 0.0">
      <geom name="table_top" type="box" size="0.4 0.3 0.02" pos="0 0 0.4" rgba="0.8 0.6 0.4 1"/>
      <geom name="table_leg1" type="cylinder" size="0.02 0.2" pos="0.35 0.25 0.2" rgba="0.6 0.4 0.2 1"/>
      <geom name="table_leg2" type="cylinder" size="0.02 0.2" pos="-0.35 0.25 0.2" rgba="0.6 0.4 0.2 1"/>
      <geom name="table_leg3" type="cylinder" size="0.02 0.2" pos="0.35 -0.25 0.2" rgba="0.6 0.4 0.2 1"/>
      <geom name="table_leg4" type="cylinder" size="0.02 0.2" pos="-0.35 -0.25 0.2" rgba="0.6 0.4 0.2 1"/>
    </body>
    
    <!-- Objects on table -->
    <body name="cube1" pos="0.5 0 0.44">
      <freejoint/>
      <inertial pos="0 0 0" mass="0.1" diaginertia="0.0001 0.0001 0.0001"/>
      <geom type="box" size="0.02 0.02 0.02" rgba=".5 .7 .5 1" mass="0.1"/>
    </body>
    <body name="cube2" pos="0.4 0.1 0.44">
      <freejoint/>
      <inertial pos="0 0 0" mass="0.1" diaginertia="0.0001 0.0001 0.0001"/>
      <geom type="box" size="0.02 0.02 0.02" rgba=".7 .5 .5 1" mass="0.1"/>
    </body>
    <body name="cube3" pos="0.45 -0.1 0.44">
      <freejoint/>
      <inertial pos="0 0 0" mass="0.1" diaginertia="0.0001 0.0001 0.0001"/>
      <geom type="box" size="0.02 0.02 0.02" rgba=".5 .5 .7 1" mass="0.1"/>
    </body>
    
    <!-- Third-person overview camera for complete scene view -->
    <camera name="overview" pos="0.8 -2.0 1.7" euler="1.0 0.0 0" fovy="42" resolution="640 480"/>
  </worldbody>
</mujoco>
