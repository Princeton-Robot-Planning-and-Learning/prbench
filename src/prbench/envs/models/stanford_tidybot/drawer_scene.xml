<mujoco model="drawer scene">
  <include file="tidybot.xml"/>
  <statistic center="0.25 0 0.6" extent="1.0" meansize="0.05"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5"/>
    <material name="cabinet_black" rgba="0.1 0.1 0.1 1"/>
    <material name="drawer_white" rgba="0.95 0.95 0.95 1"/>
    <material name="handle_black" rgba="0.1 0.1 0.1 1"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <!-- Cabinet body -->
    <body name="cabinet" pos="0.6 0 0.0">
      <!-- Main frame -->
      <geom name="cabinet_frame" type="box" size="0.25 0.18 0.45" pos="0 0 0.45" material="cabinet_black"/>
      <!-- Vertical divider between left and right (center) -->
      <geom name="cabinet_divider" type="box" size="0.01 0.18 0.45" pos="0 0 0.45" material="cabinet_black"/>
      <!-- Horizontal shelf between top and bottom -->
      <geom name="cabinet_shelf" type="box" size="0.25 0.18 0.01" pos="0 0 0.23" material="cabinet_black"/>
      <!-- Middle vertical divider for left cubbies (between drawers) -->
      <geom name="cabinet_left_divider" type="box" size="0.01 0.09 0.23" pos="-0.12 0 0.68" material="cabinet_black"/>
      <!-- Back panel -->
      <geom name="cabinet_back" type="box" size="0.25 0.01 0.45" pos="0 -0.17 0.45" material="cabinet_black"/>
      <!-- Top panel -->
      <geom name="cabinet_top" type="box" size="0.25 0.18 0.01" pos="0 0 0.89" material="cabinet_black"/>
      <!-- Bottom panel -->
      <geom name="cabinet_bottom" type="box" size="0.25 0.18 0.01" pos="0 0 0.01" material="cabinet_black"/>

      <!-- Top left drawer 1 (white front, black handle) -->
      <body name="drawer1" pos="-0.12 0 0.79">
        <geom name="drawer1_front" type="box" size="0.11 0.16 0.01" pos="0 0 0" material="drawer_white"/>
        <geom name="drawer1_handle" type="box" size="0.01 0.03 0.02" pos="0.12 0 0" material="handle_black"/>
      </body>
      <!-- Top left drawer 2 (white front, black handle) -->
      <body name="drawer2" pos="-0.12 0 0.57">
        <geom name="drawer2_front" type="box" size="0.11 0.16 0.01" pos="0 0 0" material="drawer_white"/>
        <geom name="drawer2_handle" type="box" size="0.01 0.03 0.02" pos="0.12 0 0" material="handle_black"/>
      </body>
      <!-- The right top cubby is open (no front) -->
      <!-- The bottom two cubbies are open (no front) -->
    </body>

    <!-- Three cubes on the ground in front of the cabinet -->
    <body name="cube1" pos="0.45 -0.1 0.02">
      <freejoint/>
      <geom type="box" size="0.02 0.02 0.02" rgba="0.5 0.7 0.5 1" mass="0.1"/>
    </body>
    <body name="cube2" pos="0.55 0.0 0.02">
      <freejoint/>
      <geom type="box" size="0.02 0.02 0.02" rgba="0.7 0.5 0.5 1" mass="0.1"/>
    </body>
    <body name="cube3" pos="0.65 0.1 0.02">
      <freejoint/>
      <geom type="box" size="0.02 0.02 0.02" rgba="0.5 0.5 0.7 1" mass="0.1"/>
    </body>

    <!-- Overview camera -->
    <camera name="overview" pos="1.0 -2.0 1.7" euler="1.0 0.0 0" fovy="42" resolution="640 480"/>
  </worldbody>
</mujoco> 